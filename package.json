{
  "name": "book-store-next",
  "version": "0.1.1",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3000",
    "build": "next build",
    "start": "next start -p 3000",
    "lint": "next lint --fix",
    "clean": "rimraf .next/cache && rimraf node_modules/.cache .next",
    "check-types": "tsc --pretty --noEmit",
    "check-format": "prettier --check .",
    "check-lint": "next lint",
    "format": "prettier --write .",
    "test-all": "npm run check-format && npm run check-lint && npm run check-types && npm run build",
    "prepare": "husky install"
  },
  "dependencies": {
    "autoprefixer": "^10.4.2",
    "classnames": "^2.3.1",
    "lodash": "^4.17.21",
    "mobile-detect": "^1.4.5",
    "next": "^12.0.0",
    "postcss": "^8.4.5",
    "prop-types": "^15.8.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.0.13"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^3.1.1",
    "@types/node": "^17.0.13",
    "@types/react": "^17.0.38",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "eslint": "^8.7.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-next": "^12.0.9",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react": "^7.28.0",
    "husky": "^7.0.0",
    "lint-staged": "^12.3.2",
    "prettier": "^2.5.1",
    "typescript": "^4.5.5"
  }
}
